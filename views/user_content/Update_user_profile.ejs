<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">


    <title>Update user profile - Bootdey.com</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://netdna.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="../../public/css/update_profile.css">
</head>

<body>
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
    <div class="container">
        <div class="view-account">
            <% result.forEach((element)=> { %>
                <section class="module">
                    <div class="module-inner">
                        <div class="side-bar">
                            <div class="user-info">
                                <img class="img-profile img-circle img-responsive center-block"
                                    src="../../public/images/user/<%=element.User_Id%>.jpg" alt="Not Found">
                                <ul class="meta list list-unstyled">
                                    <li class="name">
                                        <label class="label label-info">
                                            <%=element.Name%>
                                        </label>
                                    </li>
                                    <li class="email"><a href="#"><span class="__cf_email__"
                                                data-cfemail="70221512151313115e2330071512031904155e131f1d">[email&#160;protected]</span></a>
                                    </li>
                                    <li class="activity">Last logged in: Today at 2:18pm</li>
                                </ul>
                            </div>
                            <nav class="side-menu">
                                <ul class="nav">
                                    <li class="active"><a href="#"><span class="fa fa-user"></span> Profile</a></li>
                                    <li><a href="#"><span class="fa fa-cog"></span> Settings</a></li>
                                    <li><a href="#"><span class="fa fa-credit-card"></span> Billing</a></li>
                                    <li><a href="#"><span class="fa fa-envelope"></span> Messages</a></li>
                                    <li><a href="user-drive.html"><span class="fa fa-th"></span> Drive</a></li>
                                    <li><a href="#"><span class="fa fa-clock-o"></span> Reminders</a></li>
                                </ul>
                            </nav>
                        </div>
                        <div class="content-panel">
                            <h2 class="title">Profile<span class="pro-label label label-warning">PRO</span></h2>
                            <div class="form-horizontal">
                                <form action="/Update_user_profile" method="post" enctype="multipart/form-data">
                                <fieldset class="fieldset">
                                    <h3 class="fieldset-title">Personal Info</h3>
                                    <div class="form-group avatar">
                                        <figure class="figure col-md-2 col-sm-3 col-xs-12">
                                            <img class="img-rounded img-responsive"
                                            src="../../public/images/user/<%=element.User_Id%>.jpg" alt="Preview Image" id="preview-img"
                                            alt="Not Found">
                                        </figure>
                                        <!-- <form action="/Update_user_profile" method="post" enctype="multipart/form-data"> -->
                                            <div class="form-inline col-md-10 col-sm-9 col-xs-12">
                                              <input type="file" id="profile-img" name="profile_img" class="file-uploader pull-left" accept="image/*" >
                                              <!-- <button type="submit" class="btn btn-sm btn-default-alt pull-left">Update Image</button> -->
                                            </div>
                                          <!-- </form>  -->
                                                                                   
                                        </div>
                                    <div class="form-group">
                                        <label class="col-md-2 col-sm-3 col-xs-12 control-label">User Name</label>
                                        <div class="col-md-10 col-sm-9 col-xs-12">
                                            <input type="text" class="form-control" name="name" value="<%=element.Name%>" required>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-2 col-sm-3 col-xs-12 control-label">Addhar Card</label>
                                        <div class="col-md-10 col-sm-9 col-xs-12">
                                            <input type="text" class="form-control" name="aadhar" value="<%=element.Aadhar_Card%>" required>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-2 col-sm-3 col-xs-12 control-label">Password</label>
                                        <div class="col-md-10 col-sm-9 col-xs-12">
                                            <input type="text" class="form-control" name="password" value="<%=element.Password%>" required>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-2 col-sm-3 col-xs-12 control-label">Date of Birth</label>
                                        <div class="col-md-10 col-sm-9 col-xs-12">
                                            <input type="date" class="form-control"
                                               name="date" value="<%=element.DOB.toISOString().substr(0, 10)%>" required>
                                        </div>
                                    </div>
                                </fieldset>
                                <fieldset class="fieldset">
                                    <h3 class="fieldset-title">Contact Info</h3>
                                    <div class="form-group">
                                        <label class="col-md-2  col-sm-3 col-xs-12 control-label">Mobile Number</label>
                                        <div class="col-md-10 col-sm-9 col-xs-12">
                                            <input type="text" class="form-control" name="mobile" value="<%=element.Mobile_No%>"  required>
                                            <p class="help-block">Remember you can chaneg mobile number only once</p>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-2  col-sm-3 col-xs-12 control-label">Shipping
                                            Address</label>
                                        <div class="col-md-10 col-sm-9 col-xs-12">
                                            <input type="text" class="form-control" value="<%=element.Shipping_Add%>" name="address" required>
                                            <p class="help-block">Your Shipping and collection address</p>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-2  col-sm-3 col-xs-12 control-label">Crypto Account
                                            Address</label>
                                        <div class="col-md-10 col-sm-9 col-xs-12">
                                            <input type="url" class="form-control" name="account" value="">
                                            <p class="help-block">Don't Worry Your account address will be safe</p>
                                        </div>
                                    </div>
                                </fieldset>
                                <hr>
                                <div class="form-group">
                                    <div class="col-md-10 col-sm-9 col-xs-12 col-md-push-2 col-sm-push-3 col-xs-push-0">
                                        <input class="btn btn-primary" type="submit" value="Update Profile">
                                    </div>
                                </div>
                            </div>
                        </form>
                        </div>
                    </div>
                </section>
                <% }); %>
        </div>
    </div>
    <script data-cfasync="false" src="/cdn-cgi/scripts/5c5dd728/cloudflare-static/email-decode.min.js"></script>
    <script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
    <script src="https://netdna.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  
    <script>
        const fileInput = document.getElementById("profile-img");
        const imgPreview = document.getElementById("preview-img");
        
        fileInput.addEventListener("change", function() {
          const file = this.files[0];
          if (file) {
            const reader = new FileReader();
            reader.addEventListener("load", function() {
              imgPreview.setAttribute("src", this.result);
              imgPreview.style.display = "block";
            });
            reader.readAsDataURL(file);
          } else {
            imgPreview.setAttribute("src", "#");
            imgPreview.style.display = "none";
          }
        });
        
            </script>
</body>

</html>