    .under {
        display: inline-block;
    }
    div.main {
        max-height: 2000px;
        min-height: 745px;
        padding-left: 250px;
        background-image: url(../../public/images/other/img2.jpg);
    }

     /* Custom CSS */
     .delete-button {
        cursor: pointer;
        transition: transform 0.2s ease-in-out;
      }
