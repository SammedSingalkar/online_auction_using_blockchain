<html>
<head>
   <meta charset="utf-8">
   <title>Form</title>
   <link href="css/style.css" type="text/css" rel="stylesheet">
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
   <style>
      *{
         padding: 0;
         margin: 0;
      }
   
      body {
         background-color: 101046;
         background-size: cover;
      }
   
      .container {
         background: #000036;
         width: auto;
         height: auto;
         padding-bottom: 20px;
         position: absolute;
         top: 50%;
         left: 50%;
         transform: translate(-50%, -50%);
         margin: auto;
         padding: 70px 50px 20px 50px;
         padding-top: 2%;
      }
      .h1{
         color: whitesmoke;
         text-align: center;
      }
      .h3{
         padding-top: 3px;
         color: whitesmoke;
         text-align: center;
      }  
      .fl {
         float: left;
         width: 110px;
         line-height: 35px;
      }
   
      .fontLabel {
         color: white;
      }
   
      .fr {
         float: right;
      }
   
      .clr {
         clear: both;
      }
   
      .box {
         width: 375px;
         height: 35px;
         margin-top: 10px;
         font-family: verdana;
         font-size: 15px;
      }
   
      .textBox {
         height: 35px;
         width: 190px;
         border: none;
         padding-left: 20px;
      }
   
      .new {
         float: left;
      }
   
      .iconBox {
         height: 35px;
         width: 40px;
         line-height: 38px;
         font-size: 25px;
         text-align: center;
         background: #ff6600;
      }
   
      .radio {
         color: white;
         background: #000036;
         line-height: 38px;
      }
   
      .terms {
         line-height: 35px;
         text-align: center;
         background: #000036;
         color: white;
      }
   
      .submit {
         /* float: right; */
         margin-left: 18vh;
         border: none;
         color: white;
         width: 110px;
         height: 35px;
         background: #ff6600;
         text-transform: uppercase;
         cursor: pointer;
      }
      #asterisk {
      color: red;
      font-size: 20px;
    }
   </style>
</head>

<body>
   <!-- Body of Form starts -->
   <div class="container">
      <hr><br>
      <h1 class="h1">Create Account</h1>
      <h3 class="h3">Sign Up to EasyBid and Start Bidding</h3><br>
      <hr><br>
      <form method="post" autocomplete="on" action="/register" enctype="multipart/form-data">
         <!--Name-->
         <div class="box">
            <label for="firstName" class="fl fontLabel"> Name<span id="asterisk">&#42;</span></label>
            <div class="new iconBox">
               <i class="fa fa-user" aria-hidden="true"></i>
            </div>
            <div class="fr">
               <input type="text" name="name" placeholder="Enter Your Name" class="textBox" autofocus="on" required>
            </div>
            <div class="clr"></div>
         </div>
         <!--Name-->

         <!---Email ID---->
         <div class="box">
            <label for="email" class="fl fontLabel"> Email ID<span id="asterisk">&#42;</span></label>
            <div class="fl iconBox"><i class="fa fa-envelope" aria-hidden="true"></i></div>
            <div class="fr">
               <input type="email" name="email" placeholder="Email Id" class="textBox" required >
            </div>
            <div class="clr"></div>
         </div>
         <!--Email ID----->

         <!---Aadhar Card.------>
         <div class="box">
            <label for="phone" class="fl fontLabel"> Aadhar Card<span id="asterisk">&#42;</span></label>
            <div class="fl iconBox"><i class="fa fa-id-card-o" aria-hidden="true"></i></div>
            <div class="fr">
               <input type="text" required name="aadhar" maxlength="16" placeholder="Enter Your Aadhar Number" class="textBox">
            </div>
            <div class="clr"></div>
         </div>
         <!---Aadhar Card.---->

         <!---Phone No.------>
         <div class="box">
            <label for="phone" class="fl fontLabel">Mobile No<span id="asterisk">&#42;</span></label>
            <div class="fl iconBox"><i class="fa fa-phone" aria-hidden="true"></i></div>
            <div class="fr">
               <input type="text" required name="mobile" maxlength="10" placeholder="Enter Your Phone No." class="textBox">
            </div>
            <div class="clr"></div>
         </div>
         <!---Phone No.---->

              <!---Date of Birth.------>
              <div class="box">
               <label for="phone" class="fl fontLabel">Date of Birth<span id="asterisk">&#42;</span></label>
               <div class="fl iconBox"><i class="fa fa-birthday-cake" aria-hidden="true"></i></div>
               <div class="fr">
                  <input type="Date" required name="date"class="textBox">
               </div>
               <div class="clr"></div>
            </div>
            <!---Date of Birth.---->

            <!---Shipping Address.---->
            <div class="box">
               <label for="phone" class="fl fontLabel">Address<span id="asterisk">&#42;</span></label>
               <div class="fl iconBox"><i class="fa fa-map-marker" aria-hidden="true"></i></div>
               <div class="fr">
                  <input type="text" required name="address"placeholder="Enter Your Shipping Addresss." class="textBox">
               </div>
               <div class="clr"></div>
            </div>
            <!---Shipping Addresss.---->
         


         <!---Password------>
         <div class="box">
            <label for="password" class="fl fontLabel"> Password<span id="asterisk">&#42;</span></label>
            <div class="fl iconBox"><i class="fa fa-key" aria-hidden="true"></i></div>
            <div class="fr">
               <input type="Password" required name="password" placeholder="Password" class="textBox">
            </div>
            <div class="clr"></div>
         </div>
         <!---Password---->

         <!---Password------>
         <div class="box">
            <label for="password" class="fl fontLabel"> Acc Address<span id="asterisk">&#42;</span></label>
            <div class="fl iconBox"><i class="fa fa-key" aria-hidden="true"></i></div>
            <div class="fr">
               <input type="Password" required name="account_address" placeholder="Account Address" class="textBox">
            </div>
            <div class="clr"></div>
         </div>
         <!---Password---->

         <div class="box">
            <label for="file" class="fl fontLabel">Profile Img<span id="asterisk">&#42;</span></label>
            <div class="fl iconBox"><i class="fa fa-user" aria-hidden="true"></i></div>
            <div class="fr">
               <input type="file" name="profile_img" accept="image/*" class="textBox" required style="color:white;">
            </div>
            <div class="clr"></div>
         </div>


         <!--Terms and Conditions------>
        <a href="/terms_&_conditions"> <div class="box terms">
            <input type="checkbox" name="Terms" required> &nbsp; I accept the terms and conditions
         </div></a>
         <!--Terms and Conditions------>



         <!---Submit Button------>
         <div class="box" style="background: #000036">
            <input type="Submit" name="Submit" class="submit" value="SUBMIT">
         </div>
         <!---Submit Button----->
      </form>
   </div>
   <!--Body of Form ends--->
</body>
</html>